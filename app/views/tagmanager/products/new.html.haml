%p.title Product New Page
= form_for 'product', url: tagmanager_products_path do |form|
  = form.submit 'Create'
  = form.label :code
  = form.text_field :code
  = form.label :parent, 'Parent'
  = form.select :parent, options_from_collection_for_select(@products, 'id', 'code'), include_blank: true
  .products
    = form.label :subs, 'Sub-Product List:'
    %br
    = form.collection_check_boxes(:subs, @products, :id, :code, { multiple: true })
  .tag_groups
    = form.label :tag_groups, 'Attached Tag Groups:'
    %br
    = form.collection_check_boxes(:tag_groups, @tag_groups, :id, :code, { multiple: true })
